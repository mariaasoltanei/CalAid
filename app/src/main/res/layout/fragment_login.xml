<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout.Bordered"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/TextView.Header.Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/labelEmail" />

    <EditText
        android:id="@+id/etLoginEmail"
        style="@style/EditText.Yellow.Border.Margined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/labelEmail" />

    <TextView
        style="@style/TextView.Header.Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/labelPassword" />

    <EditText
        android:id="@+id/etLoginPassword"
        style="@style/EditText.Yellow.Border.Margined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/labelPassword"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnLogIn"
        style="@style/Button.Rounded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_rounded_green"
        android:text="@string/labelLogin" />

    <Button
        android:id="@+id/btnRegister"
        style="@style/Button.Rounded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_rounded_yellow"
        android:text="@string/labelSignUp" />
</LinearLayout>